<div class="container">
  <div class="row">
    <div class="col-md-12">
      <header><h1>News</h1></header>
    </div>
    
    
    <div class="col-md-8">
      <% @posts.each do |p| %>
  
       <article class="well" id="post-<%= p.id %>">
         <h2><%= p.title %></h2>
        <%= link_to 'Read more', post_path(p), class: "btn btn-primary" %>
      </article>
        

      <% end %>
    </div>
    
    <div class="col-md-4" role="aside">
      <%= render 'sidebar' %>
    </div>
    
  </div>
</div>