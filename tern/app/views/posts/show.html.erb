<div class="container">
  <div class="row">
    <div class="col-md-12">
      <header><h1><%= @post.title %></h1></header>
    </div>
    
    <div class="col-md-8" role="main">
      <article id="post-<%= @post.id %>">
        <section class="well" id="article-main">
          <p><%= @post.author %></p>

             <%= @post.body %>
        </section>

      
        <footer><%= link_to 'Back', posts_path, class: "btn btn-primary" %></footer>
      </article>
    </div>
    
    <div class="col-md-4" role="aside">
      <%= render 'sidebar' %>
    </div>

    
    
  </div>
</div>